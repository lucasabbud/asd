<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" 
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <Button
            android:id="@+id/bImportC"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:gravity="left|center_vertical"
            android:text="@string/import_clientes"
            android:drawableLeft="@drawable/users"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/bImportP"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:gravity="left|center_vertical"
            android:text="@string/import_productos"
            android:drawableLeft="@drawable/products"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bImportPed"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/invoice"
            android:text="@string/import_pedidos"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

    </LinearLayout>
    
        <Button
        android:id="@+id/bAgregar"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:drawableLeft="@drawable/users"
        android:gravity="left|center_vertical"
        android:text="@string/customers"
        android:textSize="@dimen/text_32"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button03"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:drawableLeft="@drawable/products"
        android:gravity="left|center_vertical"
        android:text="@string/products"
        android:textSize="@dimen/text_32"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button04"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:drawableLeft="@drawable/invoice"
        android:gravity="left|center_vertical"
        android:text="@string/invoices"
        android:textSize="@dimen/text_32"
        android:textStyle="bold" />
    
        <Button
        android:id="@+id/Button05"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:drawableLeft="@drawable/products"
        android:gravity="left|center_vertical"
        android:text="@string/ventaDiaria"
        android:textSize="@dimen/text_32"
        android:textStyle="bold" />

</LinearLayout>
